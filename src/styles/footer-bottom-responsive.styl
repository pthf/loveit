@media (max-width 1680px)
  #formContact label
    width: 80%;

  #formContact label span
    width: 30%;

  #formContact label input, #formContact label textarea
    width: 70%;

/* Large devices Desktops (≥1200px) */
/* Container width	*/
@media (max-width 1199px)
  #formContact
    font-size: 1.6em;

  #formContact label
    width: 90%;

  #sectionFooterContact .space
    width: 0%

  #sectionFooterContact .sectionContact
    width: 100%;

/* Medium devices Desktops (≥992px) */
/* Container width	*/
@media (max-width 991px)
  .navSocial ul
    margin-bottom: 20px;
    margin-top: 20px;

  .navSocial li
    display: inline-block;
    width: 25px;
    margin-right: 15px;

  #formContact
    font-size: 1.8em;

/* Small devices Tablets (≥768px) */
/* Container width	*/
@media (max-width 767px)
  #formContact
    font-size: 2em;
    margin-top: 30px;
