#sectionHabitaciones
  position relative
  width 100%
  margin 0 auto
  margin-left: 6%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

#sectionHabitaciones .space, #informationShow .space
  width: 6%
  height: 100%

#sectionHabitaciones .gridPhotos
  width: 94%;
  height: 100%;
  position: relative;
  z-index: 8 !important;

#informationShow .containerInfoDescription
  width: 94% !important;
  height: auto;

#sectionHabitaciones .description
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9 !important;
  overflow: auto;

.containerGallery .habLeftBox
  width: 31.1%;

.containerGallery .habCenterBox
  width: 48.9%;

.containerGallery .habRightBox
  width: 20%;

.containerGallery .title
  display: block;
  width: 100%;
  height: 40px;
  font-family: "Geomanist-Regular";
  font-size: 2.5em;
  color: #300008;
  letter-spacing: .25em;
  margin-top: 50px;

.containerGallery div
  width: 100%;

.containerGallery div img
  width: 100%;
  height: auto;
  transition: 1s
  display: block;

.containerGallery div .selectHover img:hover
  cursor: pointer;
  filter: sepia(1);
  -webkit-filter: sepia(1);

.containerGallery hr
  width: 30px;
  margin-left: 0;
  border: 2px solid #DBB66D;

.containerGallery hr.notShow
  width: 10%;
  border: 2px solid #FFF;

#sectionHabitaciones .textDescription
  width: 100%;
  height: 100px;
  text-align: justify;
  font-size: 1.65em;
  margin-bottom: 55px;

#informationShow
  position relative
  width 100%
  margin 0 auto
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  z-index: 9;

#informationShow .close
  display: inline-block;
  cursor: pointer;
  position: absolute;
  top: 2.5%;
  left: 97.5%;
  z-index: 9;
  font-size: 3em;
  color: principal-color;
  font-family: 'futura';
